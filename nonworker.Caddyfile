{
	# Non-worker Caddyfile for FrankenPHP and Laravel

	frankenphp
}

:80 {
	route {
		encode zstd br gzip

        @assets {
            path /assets/*
        }

		file_server @assets {
            root /app/public
        }

        # everything that is not in /assets is handled by your index or worker PHP file
        rewrite index.php
        php {
            root /app/public
        }
	}
}
